
du -d 0 ./* -h		Shows size of all files at 1 depth




# SETUP
#


# make 3 folders of depth 5
#
	mkdir exampleFolder 
	
	cd exampleFolder
	
	for x in (seq 5) 
	  mkdir exFolA$x 
	  cd exFolA$x
	end
	
	cd ~/Desktop/exampleFolder
	
	for x in (seq 5) 
	  mkdir exFolB$x 
	  cd exFolB$x
	end
	
	cd ~/Desktop/exampleFolder
	
	for x in (seq 5) 
	  mkdir exFolC$x 
	  cd exFolC$x
	end
	
	cd ~/Desktop/exampleFolder

#
#
#



# USE EXAMPLES
#

> du -d0

64      .


> du -d1

20      ./exFolB1
20      ./exFolA1
20      ./exFolC1
64      .



# by default it lists everyting

> du 

4       ./exFolB1/exFolB2/exFolB3/exFolB4/exFolB5
8       ./exFolB1/exFolB2/exFolB3/exFolB4
12      ./exFolB1/exFolB2/exFolB3
16      ./exFolB1/exFolB2
20      ./exFolB1
